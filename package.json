{
  "name": "@sygnas/modal-dialog",
  "version": "2.0.0",
  "description": "<dialog>要素を使ったLightbox風モーダルダイアログライブラリ",
  "main": "./dist/syg-modal-dialog.umd.js",
  "module": "./dist/syg-modal-dialog.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/syg-modal-dialog.es.js",
      "require": "./dist/syg-modal-dialog.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
