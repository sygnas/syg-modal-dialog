    "lightbox",
    "youtube",
    "image",
    "typescript"
  ],
  "author": "sygnas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sygnas/syg-modal-dialog.git"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "sass": "^1.83.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0"
  }
